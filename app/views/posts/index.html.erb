<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="my_posts">
      <% @posts.each do |post| %>
        <%= render 'postrow', post: post %>
      <% end %>
  </tbody>
</table>

<%= render 'form', post: @post %>

<br>

<%= link_to 'New Post', new_post_path %>
